#!/bin/bash -

fp=~/.newsboat/cache.db
from="Roy <cf020031308@163.com>"
to=$(cat ~/Nutstore/muttalias| sed -n '/instapaper/s/^.*instapaper //p')
if [ -z "$to" ]; then
    echo "No instapaper address found."
    exit 1
fi

function printunread() {
    cat <<EOF
Date: $(date -uR)
From: $from
To: <$to>
Subject: Feeds@$(date +'%Y%m%d')
Content-Type: text/html; charset="utf-8"

<html><body><div class="main">
$(sqlite3 $fp "SELECT printf('"'<h3> %s | <a href="%s">%s</a></h3>'"', rss_feed.title, rss_item.url, rss_item.title) FROM rss_feed JOIN rss_item ON rss_item.feedurl = rss_feed.rssurl WHERE $1 order by rss_feed.title")
</div></body></html>
EOF
}

function markread() {
    sqlite3 $fp 'UPDATE rss_item SET unread = "0" WHERE '"$1"
}

while true; do
    # Maximum depth of sqlite's expression tree is 1000
    ids=$(sqlite3 -newline ' or id = ' $fp 'SELECT id FROM rss_item WHERE unread = "1" LIMIT 200')
    ids=${ids% or id = }
    if [ -z "$ids" ]; then
        exit 0
    fi
    ids="id = $ids"
    printunread "${ids//id/rss_item.id}" | msmtp $to && markread "$ids"
done
