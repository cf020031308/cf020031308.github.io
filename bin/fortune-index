#! /bin/sh

if [ $# -lt 2 ]; then
    cat <<USAGE
Usage: $0 name dir [ path ] ...
Example: $0 diy notes/Literature/20171006 notes/English
USAGE
    exit 1;
fi

dst=$(fortune -f 2>&1 | sed -n '1p' | awk 'END{print $2}')/$1

# Merge txt files into one and index it
find ${@:2} -type f -exec sh -c "cat {} && echo %" \; | sed '$d' > $dst && strfile -s $dst && fortune -f
