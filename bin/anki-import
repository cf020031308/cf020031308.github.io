#! /bin/sh

if [ $# -lt 2 ]; then
    cat <<USAGE
Usage: $0 dir [ path ] ... output_directory
Example: $0 notes/Literature/20171006 notes/English ~/Downloads/
USAGE
    exit 1;
fi

FNAME_BASIC="anki_basic.txt"
FNAME_CLOZE="anki_cloze.txt"

src=${@:1:$# - 1}
dst=${@:$#:1}

find $src -type f -exec sh -c "echo '\"' && cat {} && echo %" \; | sed '$s/^%$/"/;s/^%$/"\
"/' > $dst/$FNAME_CLOZE
